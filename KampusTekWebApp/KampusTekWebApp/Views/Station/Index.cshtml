@model IEnumerable<KampusTek.Entities.Station>

@{
    ViewData["Title"] = "Stations";
}

<h2>Stations</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var station in Model)
        {
            <tr>
                <td>@station.Name</td>
                <td>@station.Location</td>
                <td>@station.Capacity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@station.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@station.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@station.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Station</a>
