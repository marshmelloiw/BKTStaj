@model IEnumerable<KampusTek.Entities.Station>

@{
    ViewData["Title"] = "Stations";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">İstasyonlar</h2>
    <a asp-action="Create" class="btn btn-primary">Yeni İstasyon</a>
  </div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Konum</th>
            <th>Kapasite</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var station in Model)
        {
            <tr>
                <td>@station.Name</td>
                <td>@station.Location</td>
                <td>@station.Capacity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@station.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@station.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@station.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Station</a>
