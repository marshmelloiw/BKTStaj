@model IEnumerable<KampusTek.Entities.Bicycle>

@{
    ViewData["Title"] = "Bicycles";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Bisikletler</h2>
    <a asp-action="Create" class="btn btn-primary">Yeni Bisiklet</a>
  </div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Kod</th>
            <th>Model</th>
            <th>Renk</th>
            <th>Durum</th>
            <th>İstasyon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bicycle in Model)
        {
            <tr>
                <td>@bicycle.BicycleCode</td>
                <td>@bicycle.Model</td>
                <td>@bicycle.Color</td>
                <td>
                    @if (string.Equals(bicycle.Status, "Rented", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-warning text-dark">Kullanımda</span>
                    }
                    else if (string.Equals(bicycle.Status, "Available", StringComparison.OrdinalIgnoreCase) || string.IsNullOrWhiteSpace(bicycle.Status))
                    {
                        <span class="badge bg-success">Müsait</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@bicycle.Status</span>
                    }
                </td>
                <td>@(bicycle.CurrentStation?.Name ?? "-")</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Details" asp-route-id="@bicycle.Id" class="btn btn-outline-secondary">Detay</a>
                        <a asp-action="Edit" asp-route-id="@bicycle.Id" class="btn btn-outline-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@bicycle.Id" class="btn btn-outline-danger">Sil</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

