@model IEnumerable<KampusTek.Entities.Bicycle>

@{
    ViewData["Title"] = "Bicycles";
}

<h2>Bicycles</h2>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Model</th>
            <th>Color</th>
            <th>Status</th>
            <th>Station</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bicycle in Model)
        {
            <tr>
                <td>@bicycle.BicycleCode</td>
                <td>@bicycle.Model</td>
                <td>@bicycle.Color</td>
                <td>@bicycle.Status</td>
                <td>@bicycle.CurrentStation?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@bicycle.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@bicycle.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@bicycle.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Bicycle</a>
