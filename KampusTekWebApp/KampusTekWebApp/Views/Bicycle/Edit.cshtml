@model KampusTek.Entities.Bicycle

@{
    ViewData["Title"] = "Bisiklet Düzenle";
}

<h2>Bisiklet Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Kod</label>
        <input asp-for="BicycleCode" class="form-control" />
    </div>
    <div class="form-group">
        <label>Model</label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="form-group">
        <label>Renk</label>
        <input asp-for="Color" class="form-control" />
    </div>
    <div class="form-group">
        <label>Durum</label>
        <input asp-for="Status" class="form-control" />
    </div>
    <div class="form-group">
        <label>İstasyon</label>
        <select asp-for="CurrentStationId" class="form-control" asp-items="ViewBag.Stations">
            <option value="">-- İstasyon Seçin --</option>
        </select>
        <span asp-validation-for="CurrentStationId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
