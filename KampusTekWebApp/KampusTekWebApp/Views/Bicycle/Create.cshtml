@model KampusTek.Entities.Bicycle

@{
    ViewData["Title"] = "Yeni Bisiklet";
}

<h2>Yeni Bisiklet Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Kod</label>
        <input asp-for="BicycleCode" class="form-control" />
    </div>
    <div class="form-group">
        <label>Model</label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="form-group">
        <label>Renk</label>
        <input asp-for="Color" class="form-control" />
    </div>
    <div class="form-group">
        <label>Durum</label>
        <input asp-for="Status" class="form-control" />
    </div>
    <div class="form-group">
        <label>İstasyon ID</label>
        <input asp-for="CurrentStationId" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
