@model KampusTek.Entities.Bicycle

@{
    ViewData["Title"] = "Bisiklet Sil";
}

<h2>Bisiklet Sil</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div>
    <h4>@Model.BicycleCode kodlu bisikleti silmek istediğinize emin misiniz?</h4>
    <p><b>Model:</b> @Model.Model</p>
    <p><b>Renk:</b> @Model.Color</p>
    <p><b>Durum:</b> @Model.Status</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
