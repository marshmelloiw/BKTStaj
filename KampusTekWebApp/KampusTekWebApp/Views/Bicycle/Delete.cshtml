@model KampusTek.Entities.Bicycle

@{
    ViewData["Title"] = "Bisiklet Sil";
}

<h2>Bisiklet Sil</h2>

<div>
    <h4>@Model.BicycleCode kodlu bisikleti silmek istediğinize emin misiniz?</h4>
    <p><b>Model:</b> @Model.Model</p>
    <p><b>Renk:</b> @Model.Color</p>
    <p><b>Durum:</b> @Model.Status</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
