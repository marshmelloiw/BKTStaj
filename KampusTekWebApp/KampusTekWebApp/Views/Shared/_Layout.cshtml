<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KampusTek</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-semibold" href="/">KampusTek</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Home"?"active":"")" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString()=="User"?"active":"")" asp-controller="User" asp-action="Index">Kullanıcılar</a></li>
                            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Bicycle"?"active":"")" asp-controller="Bicycle" asp-action="Index">Bisikletler</a></li>
                            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Station"?"active":"")" asp-controller="Station" asp-action="Index">İstasyonlar</a></li>
                            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Maintenance"?"active":"")" asp-controller="Maintenance" asp-action="Index">Bakımlar</a></li>
                        }
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Rental"?"active":"")" asp-controller="Rental" asp-action="Index">Kiralamalar</a></li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-2 text-secondary">@User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Çıkış Yap</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Giriş Yap</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Kayıt Ol</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light border-top text-center py-3 mt-4">
        <p class="mb-0">&copy; 2025 - KampusTek</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
