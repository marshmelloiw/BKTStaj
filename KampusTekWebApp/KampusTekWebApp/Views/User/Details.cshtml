@model KampusTek.Entities.User

@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<ul class="list-group">
    <li class="list-group-item"><b>First Name:</b> @Model.FirstName</li>
    <li class="list-group-item"><b>Last Name:</b> @Model.LastName</li>
    <li class="list-group-item"><b>Email:</b> @Model.Email</li>
    <li class="list-group-item"><b>Phone:</b> @Model.CellNumber</li>
    <li class="list-group-item"><b>User Type:</b> @Model.UserType?.Name</li>
</ul>

<a asp-action="Index" class="btn btn-secondary">Back</a>