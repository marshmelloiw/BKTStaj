@model KampusTek.Entities.Rental

@{
    ViewData["Title"] = "Kiralama Düzenle";
}

<h2>Kiralama Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Kullanıcı ID</label>
        <input asp-for="UserId" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label class="form-label">Bisiklet ID</label>
        <input asp-for="BicycleId" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label class="form-label">Başlangıç İstasyon ID</label>
        <input asp-for="StartStationId" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label class="form-label">Bitiş İstasyon ID</label>
        <input asp-for="EndStationId" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label class="form-label">Başlangıç Zamanı</label>
        <input asp-for="StartTime" class="form-control" type="datetime-local" />
    </div>
    <div class="mb-3">
        <label class="form-label">Dönüş Zamanı</label>
        <input asp-for="ReturnTime" class="form-control" type="datetime-local" />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Geri</a>
</form>
