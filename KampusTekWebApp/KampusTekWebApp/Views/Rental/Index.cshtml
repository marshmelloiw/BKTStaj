@model IEnumerable<KampusTek.Entities.Rental>

@{
    ViewData["Title"] = "Rentals";
}

<h2>Rentals</h2>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Bicycle</th>
            <th>Start Station</th>
            <th>End Station</th>
            <th>Start Time</th>
            <th>Return Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.User?.FirstName @rental.User?.LastName</td>
                <td>@rental.Bicycle?.BicycleCode</td>
                <td>@rental.StartStation?.Name</td>
                <td>@rental.EndStation?.Name</td>
                <td>@rental.StartTime</td>
                <td>@rental.ReturnTime</td>
                <td>
                    <a asp-action="Details" asp-route-id="@rental.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@rental.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@rental.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Rental</a>
