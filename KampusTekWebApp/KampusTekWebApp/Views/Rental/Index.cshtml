@model IEnumerable<KampusTek.Entities.Rental>

@{
    ViewData["Title"] = "Rentals";
}

<h2>Rentals</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Bicycle</th>
            <th>Start Station</th>
            <th>End Station</th>
            <th>Start Time</th>
            <th>Return Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.User?.FirstName @rental.User?.LastName</td>
                <td>@rental.Bicycle?.BicycleCode</td>
                <td>@rental.StartStation?.Name</td>
                <td>@rental.EndStation?.Name</td>
                <td>@rental.StartTime</td>
                <td>@rental.ReturnTime</td>
                <td>
                    <a asp-action="Details" asp-route-id="@rental.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@rental.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@rental.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Rental</a>
