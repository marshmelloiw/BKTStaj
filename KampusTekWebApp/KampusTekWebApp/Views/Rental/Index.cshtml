@model IEnumerable<KampusTek.Entities.Rental>

@{
    ViewData["Title"] = "Rentals";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Kiralama İşlemleri</h2>
    <a asp-action="Create" class="btn btn-primary">Yeni Kiralama</a>
  </div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Bisiklet</th>
            <th>Başlangıç İstasyonu</th>
            <th>Bitiş İstasyonu</th>
            <th>Başlangıç</th>
            <th>Dönüş</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.User?.FirstName @rental.User?.LastName</td>
                <td>@rental.Bicycle?.BicycleCode</td>
                <td>@rental.StartStation?.Name</td>
                <td>@rental.EndStation?.Name</td>
                <td>@rental.StartTime.ToString("g")</td>
                <td>@(rental.ReturnTime?.ToString("g") ?? "-")</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Details" asp-route-id="@rental.Id" class="btn btn-outline-secondary">Detay</a>
                        @if (rental.ReturnTime == null)
                        {
                            <a asp-action="End" asp-route-id="@rental.Id" class="btn btn-success">Tamamla</a>
                        }
                        @if (ViewBag.IsAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@rental.Id" class="btn btn-outline-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@rental.Id" class="btn btn-outline-danger">Sil</a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

