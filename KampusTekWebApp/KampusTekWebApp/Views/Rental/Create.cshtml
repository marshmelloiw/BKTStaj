@model KampusTek.Entities.Rental

@{
    ViewData["Title"] = "Yeni Kiralama";
}

<h2>Yeni Kiralama Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Kullanıcı ID</label>
        <input asp-for="UserId" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Bisiklet ID</label>
        <input asp-for="BicycleId" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Başlangıç İstasyon ID</label>
        <input asp-for="StartStationId" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Bitiş İstasyon ID (Opsiyonel)</label>
        <input asp-for="EndStationId" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Başlangıç Zamanı</label>
        <input asp-for="StartTime" class="form-control" type="datetime-local" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
