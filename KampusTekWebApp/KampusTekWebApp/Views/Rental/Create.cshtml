@model KampusTek.Entities.Rental

@{
    ViewData["Title"] = "Create Rental";
}

<h2>Yeni Kiralama</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="UserId" class="form-label">Kullanıcı</label>
        <select asp-for="UserId" class="form-select" asp-items="@(ViewBag.Users as SelectList)">
            <option value="">Kullanıcı seçin</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="BicycleId" class="form-label">Bisiklet</label>
        <select asp-for="BicycleId" class="form-select" asp-items="@(ViewBag.Bicycles as SelectList)">
            <option value="">Müsait bisiklet seçin</option>
        </select>
        <span asp-validation-for="BicycleId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="StartStationId" class="form-label">Başlangıç İstasyonu</label>
        <select asp-for="StartStationId" class="form-select" asp-items="@(ViewBag.Stations as SelectList)">
            <option value="">İstasyon seçin</option>
        </select>
        <span asp-validation-for="StartStationId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="EndStationId" class="form-label">Bitiş İstasyonu (Opsiyonel)</label>
        <select asp-for="EndStationId" class="form-select" asp-items="@(ViewBag.Stations as SelectList)">
            <option value="">(Opsiyonel)</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="StartTime" class="form-label">Başlangıç Zamanı</label>
        <input asp-for="StartTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
