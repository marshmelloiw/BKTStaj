@model IEnumerable<KampusTek.Entities.Maintenance>

@{
    ViewData["Title"] = "Maintenances";
}

<h2>Maintenances</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Bicycle</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var maintenance in Model)
        {
            <tr>
                <td>@maintenance.Bicycle?.BicycleCode</td>
                <td>@maintenance.Description</td>
                <td>@maintenance.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@(maintenance.EndDate?.ToString("yyyy-MM-dd") ?? "Ongoing")</td>
                <td>
                    @if (maintenance.EndDate == null)
                    {
                        <span class="badge badge-warning">Ongoing</span>
                    }
                    else
                    {
                        <span class="badge badge-success">Completed</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@maintenance.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@maintenance.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@maintenance.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Maintenance</a>
