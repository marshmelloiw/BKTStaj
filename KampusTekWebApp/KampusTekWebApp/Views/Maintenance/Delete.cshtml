@model KampusTek.Entities.Maintenance

@{
    ViewData["Title"] = "Delete Maintenance";
}

<h2>Delete Maintenance</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<h3>Are you sure you want to delete this maintenance record?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Bicycle</dt>
        <dd class="col-sm-10">@Model.Bicycle?.BicycleCode</dd>
        
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd")</dd>
        
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "Ongoing")</dd>
        
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @if (Model.EndDate == null)
            {
                <span class="badge badge-warning">Ongoing</span>
            }
            else
            {
                <span class="badge badge-success">Completed</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
